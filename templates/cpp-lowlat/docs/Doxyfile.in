# Doxyfile for @PROJECT_NAME@

# Project information
PROJECT_NAME           = "@PROJECT_NAME@"
PROJECT_NUMBER         = "@PROJECT_VERSION@"
PROJECT_BRIEF          = "C++ Project"
OUTPUT_DIRECTORY       = @CMAKE_CURRENT_BINARY_DIR@/doxygen

# Input settings
INPUT                  = @CMAKE_SOURCE_DIR@/include @CMAKE_SOURCE_DIR@/src
RECURSIVE              = YES
FILE_PATTERNS          = *.cpp *.hpp *.h *.cc *.cxx

# Output settings
GENERATE_HTML          = NO
GENERATE_XML           = YES
XML_OUTPUT             = xml
EXTRACT_ALL            = NO
EXTRACT_PRIVATE        = NO
EXTRACT_STATIC         = YES

# Documentation warnings
QUIET                  = NO
WARNINGS               = YES
WARN_IF_UNDOCUMENTED   = YES
WARN_IF_DOC_ERROR      = YES
WARN_NO_PARAMDOC       = YES
WARN_AS_ERROR          = NO

# Preprocessing
ENABLE_PREPROCESSING   = YES
MACRO_EXPANSION        = YES
EXPAND_ONLY_PREDEF     = NO

# Graphs
HAVE_DOT               = YES
CALL_GRAPH             = YES
CALLER_GRAPH           = YES
GRAPHICAL_HIERARCHY    = YES
DIRECTORY_GRAPH        = YES

# Other settings
BUILTIN_STL_SUPPORT    = YES
EXTRACT_LOCAL_CLASSES  = YES
SHOW_INCLUDE_FILES     = YES
INLINE_SOURCES         = NO
REFERENCED_BY_RELATION = YES
REFERENCES_RELATION    = YES
